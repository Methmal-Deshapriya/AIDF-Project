{
  "compilerOptions": {
    "target": "es2019", // ✅ Better compatibility for Node.js 18+
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src", // ✅ Helps with clean builds
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["es2019"] // ✅ More stable than "esnext" on servers
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
